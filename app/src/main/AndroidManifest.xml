<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rashmin.miniapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.product_name.ProductActivity"></activity>
        <activity
            android:name=".ui.product_list_action_bar.Action_Bar_ProductActivity"
            android:theme="@style/AppTheme.FullScreen"></activity>
        <activity
            android:name=".ui.home_page.HomeActivity"
            android:theme="@style/AppTheme.FullScreen"></activity>
        <activity
            android:name=".ui.splash_screen.car_logo_splashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>