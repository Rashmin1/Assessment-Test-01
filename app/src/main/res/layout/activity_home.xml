<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ui.home_page.HomeActivity">

    <TextView
        android:id="@+id/welcome_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Welcome To You \n For Comming in Our Showroom"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/guest_button"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/guest_button_shape"
        android:text="Guest"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/welcome_textView"
        app:layout_constraintStart_toStartOf="@+id/welcome_textView"
        app:layout_constraintTop_toBottomOf="@+id/welcome_textView" />

    <TextView
        android:id="@+id/text"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:text="You can click here"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guest_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guest_button"
        app:layout_constraintTop_toBottomOf="@+id/guest_button" />
</androidx.constraintlayout.widget.ConstraintLayout>