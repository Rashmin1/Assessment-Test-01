<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/p_id"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Product Id"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/p_name"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Product Name"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/p_id"
                app:layout_constraintStart_toStartOf="@+id/p_id"
                app:layout_constraintTop_toBottomOf="@+id/p_id" />

            <TextView
                android:id="@+id/p_category"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Product Category"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/p_name"
                app:layout_constraintStart_toStartOf="@+id/p_name"
                app:layout_constraintTop_toBottomOf="@+id/p_name" />

            <TextView
                android:id="@+id/p_description"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Product Description"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/p_category"
                app:layout_constraintStart_toStartOf="@+id/p_category"
                app:layout_constraintTop_toBottomOf="@+id/p_category" />

            <TextView
                android:id="@+id/p_price"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Product Price"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/p_description"
                app:layout_constraintStart_toStartOf="@+id/p_description"
                app:layout_constraintTop_toBottomOf="@+id/p_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>